extends layout

block links
    link(rel='stylesheet', href='/datatables/media/css/jquery.dataTables.css')
    link(rel='stylesheet', href='/datatables/extensions/TableTools/css/dataTables.tableTools.css')
    link(rel='stylesheet', href='/datatables/extensions/Editor-1.3.3/css/dataTables.editor.css')
    link(rel='stylesheet', href='/css/syntax/shCore.css')
    link(rel='stylesheet', href='/css/iconsent.css')
    link(rel='stylesheet', href='/jquery-ui/themes/excite-bike/jquery-ui.css')
block scripts
    script(src='/datatables/media/js/jquery.js', language='javascript', type='text/javascript')
    script(src='/datatables/media/js/jquery.dataTables.js', language='javascript', type='text/javascript')
    script(src='/datatables/extensions/TableTools/js/dataTables.tableTools.js', language='javascript', type='text/javascript')
    script(src='/datatables/extensions/Editor-1.3.3/js/dataTables.editor.js', language='javascript', type='text/javascript')
    script(src='/js/syntax/shCore.js', language='javascript', type='text/javascript')
    script(src='/js/app.js', language='javascript', type='text/javascript')
    script(src='/js/datatable-editor.js', language='javascript', type='text/javascript')
    script(src='/jquery-ui/jquery-ui.js', language='javascript', type='text/javascript')
    script(src='/js/tabs-init.js', language='javascript', type='text/javascript')
    script(src='/js/datatables-init.js', class='init', language='javascript', type='text/javascript')
block content
  if (user)
    div(id='tabs')
        ul
            li
                a(href='#patients') Patients
                a(href='#templates') Templates
                a(href='#consents') Consents
                a(href='#administration') Administration
        div(id='templates')
            table(id='patients-table', class='display', cellspacing='0' width='100%')
                thead
                    tr
                        th First Name
                        th Middle Name
                        th Last Name
                        th Date of Birth
                        th Registration Date
                        th Address
                tfoot
                    tr
                        th First Name
                        th Middle Name
                        th Last Name
                        th Date of Birth
                        th Registration Date
                        th Address
        div(id='templates')
        div(id='templates')
  else
    p You are currently not logged in. Please login...